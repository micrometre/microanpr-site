---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import ContactForm from '../components/ContactForm.jsx';
import { Mail, Phone, MapPin } from 'lucide-react';
---

<Layout title="Contact MicroANPR - Get Started Today" description="Contact MicroANPR to discuss your ANPR requirements. Our experts are ready to help you implement cutting-edge number plate recognition solutions.">
  <Header client:load />
  <main class="bg-gray-50 dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="bg-blue-600 dark:bg-blue-700 py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
            Get In Touch
          </h1>
          <p class="mt-6 text-lg leading-8 text-blue-100 dark:text-blue-200">
            Ready to transform your operations with cutting-edge ANPR technology? 
            Our experts are here to help you find the perfect solution.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto grid max-w-2xl  gap-16 lg:max-w-none ">
          <!-- Contact Information -->
          <div>
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
              Let's discuss your requirements
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300">
              Our team of ANPR experts is ready to understand your specific needs and 
              provide tailored solutions that deliver measurable results.
            </p>
            

          <!-- Contact Form -->
          <ContactForm client:load />
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
