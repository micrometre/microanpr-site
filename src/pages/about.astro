---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import { Users, Award, Globe, Zap } from 'lucide-react';

const stats = [
  { name: 'Years of Experience', value: '15+' },
  { name: 'Global Clients', value: '500+' },
  { name: 'Countries Served', value: '50+' },
  { name: 'Plates Processed Daily', value: '10M+' },
]

const team = [
  {
    name: 'Sarah Johnson',
    role: 'Chief Executive Officer',
    imageUrl: 'https://images.unsplash.com/photo-1494790108755-2616b612b416?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80',
    bio: '15+ years leading technology companies in AI and computer vision.',
  },
  {
    name: 'Michael Chen',
    role: 'Chief Technology Officer',
    imageUrl: 'https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80',
    bio: 'Former Google engineer specializing in machine learning and computer vision.',
  },
  {
    name: 'Emma Rodriguez',
    role: 'VP of Engineering',
    imageUrl: 'https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80',
    bio: 'PhD in Computer Science with expertise in real-time image processing systems.',
  },
]

const values = [
  {
    name: 'Innovation',
    description: 'We continuously push the boundaries of ANPR technology to deliver cutting-edge solutions.',
    icon: Zap,
  },
  {
    name: 'Reliability',
    description: 'Our systems are built for 24/7 operation with enterprise-grade reliability and uptime.',
    icon: Award,
  },
  {
    name: 'Global Reach',
    description: 'Supporting organizations worldwide with local expertise and global best practices.',
    icon: Globe,
  },
  {
    name: 'Partnership',
    description: 'We work closely with our clients to understand their needs and deliver tailored solutions.',
    icon: Users,
  },
]
---

<Layout title="About MicroANPR - Leading ANPR Technology Company">
  <Header client:load />
  <main>
    <!-- Hero Section -->
    <section class="bg-gray-50 py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
            About MicroANPR
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Leading the future of Automatic Number Plate Recognition technology with 
            innovative solutions that transform how organizations manage security, 
            traffic, and access control.
          </p>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="py-24 bg-white">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
          <h2 class="text-base font-semibold leading-7 text-blue-600">Our Mission</h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            Empowering organizations with intelligent recognition technology
          </p>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Founded in 2010, MicroANPR has been at the forefront of computer vision and 
            artificial intelligence, specifically focused on Automatic Number Plate Recognition. 
            Our mission is to provide the most accurate, reliable, and scalable ANPR solutions 
            that help organizations enhance security, optimize operations, and create smarter environments.
          </p>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="bg-blue-600 py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <dl class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-4">
          {stats.map((stat) => (
            <div class="mx-auto flex max-w-xs flex-col gap-y-4">
              <dt class="text-base leading-7 text-blue-100">{stat.name}</dt>
              <dd class="order-first text-3xl font-semibold tracking-tight text-white sm:text-5xl">
                {stat.value}
              </dd>
            </div>
          ))}
        </dl>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-24 bg-gray-50">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
          <h2 class="text-base font-semibold leading-7 text-blue-600">Our Values</h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            What drives us every day
          </p>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Our core values guide everything we do, from product development to customer support.
          </p>
        </div>
        <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl">
          <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16">
            {values.map((value) => (
              <div class="relative pl-16">
                <dt class="text-base font-semibold leading-7 text-gray-900">
                  <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-blue-600">
                    <value.icon className="h-6 w-6 text-white" />
                  </div>
                  {value.name}
                </dt>
                <dd class="mt-2 text-base leading-7 text-gray-600">{value.description}</dd>
              </div>
            ))}
          </dl>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-24 bg-white">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
          <h2 class="text-base font-semibold leading-7 text-blue-600">Our Team</h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            Meet the experts behind MicroANPR
          </p>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Our leadership team brings decades of experience in AI, computer vision, 
            and enterprise software development.
          </p>
        </div>
        <ul class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
          {team.map((person) => (
            <li>
              <img 
                class="aspect-[3/2] w-full rounded-2xl object-cover" 
                src={person.imageUrl} 
                alt={person.name}
                width="300"
                height="200"
              />
              <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">
                {person.name}
              </h3>
              <p class="text-base leading-7 text-blue-600">{person.role}</p>
              <p class="mt-4 text-base leading-7 text-gray-600">{person.bio}</p>
            </li>
          ))}
        </ul>
      </div>
    </section>

    <!-- History Section -->
    <section class="py-24 bg-gray-50">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
          <h2 class="text-base font-semibold leading-7 text-blue-600">Our Journey</h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            15 years of innovation
          </p>
        </div>
        <div class="mx-auto mt-16 max-w-2xl">
          <div class="space-y-8">
            <div class="flex gap-x-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-600">
                <span class="text-white font-semibold text-sm">2010</span>
              </div>
              <div>
                <h3 class="text-sm font-semibold leading-6 text-gray-900">Company Founded</h3>
                <p class="mt-2 text-sm leading-6 text-gray-600">
                  MicroANPR was founded with the vision to revolutionize license plate recognition technology.
                </p>
              </div>
            </div>
            <div class="flex gap-x-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-600">
                <span class="text-white font-semibold text-sm">2015</span>
              </div>
              <div>
                <h3 class="text-sm font-semibold leading-6 text-gray-900">Global Expansion</h3>
                <p class="mt-2 text-sm leading-6 text-gray-600">
                  Expanded operations to Europe and Asia, serving over 100 enterprise clients.
                </p>
              </div>
            </div>
            <div class="flex gap-x-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-600">
                <span class="text-white font-semibold text-sm">2020</span>
              </div>
              <div>
                <h3 class="text-sm font-semibold leading-6 text-gray-900">AI-Powered Platform</h3>
                <p class="mt-2 text-sm leading-6 text-gray-600">
                  Launched our next-generation AI platform with 99.9% accuracy and real-time processing.
                </p>
              </div>
            </div>
            <div class="flex gap-x-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-600">
                <span class="text-white font-semibold text-sm">2025</span>
              </div>
              <div>
                <h3 class="text-sm font-semibold leading-6 text-gray-900">Industry Leadership</h3>
                <p class="mt-2 text-sm leading-6 text-gray-600">
                  Now serving 500+ clients across 50 countries, processing over 10 million plates daily.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
